.navbar-inverse
  .navbar-header
    %button.navbar-toggle{ type: 'button', data: { toggle: 'collapse', target: '.navbar-collapse' } }
      %span.sr-only
        Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{ href: '/'}
      = image_tag "lights.png", alt: 'Lights'
  .collapse.navbar-collapse
    - unless user_signed_in?
      .pull-right.hidden-xs
        = link_to new_user_session_path, class: 'navbar-btn btn btn-red' do
          Sign In
        &nbsp;
        = link_to new_user_registration_path, class: 'navbar-btn btn btn-red' do
          Sign Up
      %div.hidden-lg.hidden-md.hidden-sm
        = link_to new_user_session_path, class: 'navbar-btn btn btn-red' do
          Sign In!
        &nbsp;
        = link_to new_user_registration_path, class: 'navbar-btn btn btn-red' do
          Sign Up
    - else
      %ul.nav.navbar-nav.navbar-right#fix-me
        %li
          = link_to devices_path do
            %i.fa.fa-folder-open-o
            Devices
        %li
          = link_to lights_path do
            %i.fa.fa-lightbulb-o
            Lights
        %li
          = link_to groups_path do
            %i.fa.fa-object-group
            Groups
        %li
          = link_to floor_plan_path do
            %i.fa.fa-map
            Floor Plan
        %li.dropdown
          = link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown'  do
            = current_user.email
            %i.fa.fa-angle-down
          %ul.dropdown-menu
            %li
              = link_to 'Locations', locations_path
            %li.divider
            %li
              = link_to 'Hue Lights', hue_lights_path
            %li
              = link_to 'Wemo', wemo_index_path
            %li.divider
            %li
              = link_to 'Sign Out', destroy_user_session_path, class: 'sign_out', method: :delete
